<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_order_inherit_heckert_new">
        <field name="name">Sale order view new</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="before">
                <group string="Pre-Lines Textblocks" attrs="{'invisible': [('is_need_template_pre', '=', False)]}">
                    <group>
                        <field name="preline_text"/>

                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="after">
                <group string="Post-Lines Textblocks" attrs="{'invisible': [('is_need_template_post', '=', False)]}">
                    <group>
                        <field name="postline_text"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="text_block_id"/>
                <field name="is_need_template_pre" invisible="1"/>
                <field name="is_need_template_post" invisible="1"/>

            </xpath>
        </field>
    </record>
</odoo>